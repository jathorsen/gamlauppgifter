<Window x:Class="Gammalegg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gammalegg"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtEggs" HorizontalAlignment="Left" Margin="104,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78"/>
        <Button x:Name="btnEggs" Content="Beräkna" HorizontalAlignment="Left" Margin="104,217,0,0" VerticalAlignment="Top" Width="51" Click="btnEggs_Click"/>
        <TextBlock x:Name="txtNumberofEggs" HorizontalAlignment="Left" Margin="104,257,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="163" Height="57"/>
        <Button x:Name="btnIsBroken" Content="Äggstatus" HorizontalAlignment="Left" Margin="293,286,0,0" VerticalAlignment="Top" Width="61" Click="btnIsBroken_Click"/>
        <Button x:Name="btnAddHens" Content="Lägg till hönor" HorizontalAlignment="Left" Margin="104,336,0,0" VerticalAlignment="Top" Width="97" Click="btnAddHens_Click"/>

    </Grid>
</Window>
